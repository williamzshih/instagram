generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  avatar   String @default("https://upload.wikimedia.org/wikipedia/commons/2/2c/Default_pfp.svg")
  username String
  name     String
  bio      String
  email    String @unique
}

model Post {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  image   String
  caption String
  email   String @unique
}

model Comment {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  email   String @unique
}
